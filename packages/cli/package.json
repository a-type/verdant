{
	"name": "@verdant-web/cli",
	"version": "4.1.0",
	"description": "Schema management tools for verdant",
	"type": "module",
	"bin": {
		"verdant": "dist/bin/index.js"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist/",
		"src/"
	],
	"scripts": {
		"build": "tsc",
		"link": "pnpm link --global",
		"exec": "tsx ./src/bin/index.ts",
		"test": "pnpm run pretest && vitest",
		"ci:test:unit": "pnpm run pretest && vitest run",
		"pretest": "pnpm run exec -s ./test/schema.ts -o ./test/.generated -r --select=publish --module=esm",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@clack/prompts": "^0.5.1",
		"@swc/core": "^1.3.8",
		"change-case": "^4.1.2",
		"esbuild": "^0.19.5",
		"prettier": "^3.0.3",
		"yargs": "^17.6.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/estree": "^1.0.1",
		"@types/yargs": "^17.0.29",
		"@verdant-web/common": "workspace:*",
		"@verdant-web/react": "workspace:*",
		"@verdant-web/store": "workspace:*",
		"fake-indexeddb": "^4.0.0",
		"jsdom": "^20.0.0",
		"rimraf": "^5.0.5",
		"tsx": "^4.6.2",
		"typescript": "^4.7.4",
		"vitest": "^0.24.3"
	}
}
