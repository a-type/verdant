{
	"name": "@verdant-web/server",
	"version": "4.1.1",
	"access": "public",
	"type": "module",
	"bin": {
		"verdant-server": "./bin/server.mjs"
	},
	"exports": {
		".": {
			"development": "./src/index.ts",
			"import": "./dist/esm/index.js",
			"types": "./dist/esm/index.d.ts"
		},
		"./storage": {
			"development": "./src/storage/index.ts",
			"import": "./dist/esm/storage/index.js",
			"types": "./dist/esm/storage/index.d.ts"
		},
		"./internals": {
			"development": "./src/internals.ts",
			"import": "./dist/esm/internals.js",
			"types": "./dist/esm/internals.d.ts"
		},
		"./node": {
			"development": "./src/adapters/node/index.ts",
			"import": "./dist/esm/adapters/node/index.js",
			"types": "./dist/esm/adapters/node/index.d.ts"
		}
	},
	"publishConfig": {
		"exports": {
			".": {
				"import": "./dist/esm/index.js",
				"types": "./dist/esm/index.d.ts"
			},
			"./storage": {
				"import": "./dist/esm/storage/index.js",
				"types": "./dist/esm/storage/index.d.ts"
			},
			"./internals": {
				"import": "./dist/esm/internals.js",
				"types": "./dist/esm/internals.d.ts"
			}
		},
		"access": "public"
	},
	"files": [
		"dist/",
		"src/",
		"bin/"
	],
	"scripts": {
		"build": "tsc",
		"prepublish": "pnpm run build",
		"link": "pnpm link --global",
		"test": "vitest",
		"ci:test:unit": "vitest run",
		"perf": "pnpm run build && cross-env VERDANT_LOG=false node ./perf/perf.mjs"
	},
	"peerDependencies": {
		"hono": "^4.7.2",
		"@hono/node-server": "^1.13.8"
	},
	"peerDependenciesMeta": {
		"hono": {
			"optional": true
		},
		"@hono/node-server": {
			"optional": true
		}
	},
	"dependencies": {
		"@hono/node-server": "catalog:",
		"@verdant-web/common": "workspace:*",
		"better-sqlite3": "catalog:",
		"hono": "catalog:",
		"jsonwebtoken": "^8.5.1",
		"minimist": "^1.2.8",
		"ws": "^8.9.0"
	},
	"devDependencies": {
		"@types/async-lock": "^1.3.0",
		"@types/better-sqlite3": "^7.6.12",
		"@types/jsonwebtoken": "^8.5.9",
		"@types/node": "catalog:",
		"@types/ws": "^8.5.3",
		"cross-env": "7.0.3",
		"typescript": "catalog:",
		"vitest": "catalog:"
	}
}
